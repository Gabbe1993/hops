        <name>fs.defaultFS</name>
        <value>hdfs://localhost:60010</value>
    </property>
    <property>
        <name>dfs.replication</name>
        <value>1</value>
    </property>
    <property>
        <name>hdfs.namenode.block.provider.class</name>
        <value>org.apache.hadoop.hdfs.server.namenode.BlockFormatProvider</value>
    </property>
